{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i>Voir</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit"></i>Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Non disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}"><i class="fas fa-plus-square"></i>Ajouter</a>
{% endblock %}
